<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_fragment_circle_of_trust"
    tools:context="com.peacecorps.pcsa.CircleOfTrustFragment"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_normal"
            android:textColor="@color/intro_text_color"
            android:text="CIRCLE OF TRUST"
            />
        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="@color/fragment_of_trust_text_color"
            android:src="@mipmap/ic_edit_button"
            android:textSize="@dimen/text_normal"
            android:background="@drawable/btn_rounded_rectangle"
            android:text="Com 4"

            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageButton
                android:id="@+id/com1Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="@color/fragment_of_trust_text_color"
                android:textSize="@dimen/text_normal"
                android:background="@drawable/btn_rounded_rectangle"
                android:text="CM 1"
                android:src="@mipmap/ic_comrade"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="0dp"/>
            <ImageButton
                android:id="@+id/com2Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="@color/fragment_of_trust_text_color"
                android:src="@mipmap/ic_comrade"
                android:textSize="@dimen/text_normal"
                android:background="@drawable/btn_rounded_rectangle"
                android:text="CM 2"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="70dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">
            <ImageButton
                android:id="@+id/com6Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="@color/fragment_of_trust_text_color"
                android:src="@mipmap/ic_comrade"
                android:textSize="@dimen/text_normal"
                android:background="@drawable/btn_rounded_rectangle"
                android:text="Com 6"
                android:layout_marginTop="50dp"
               />

            <ImageButton
                android:id="@+id/requestButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textColor="@color/fragment_of_trust_text_color"
                android:background="@mipmap/ic_help_me"
                android:text="Request Help"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="40dp"/>
            <ImageButton
                android:id="@+id/com3Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="@color/fragment_of_trust_text_color"
                android:src="@mipmap/ic_comrade"
                android:textSize="@dimen/text_normal"
                android:background="@drawable/btn_rounded_rectangle"
                android:text="Com 3"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageButton
                android:id="@+id/com5Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="@color/fragment_of_trust_text_color"
                android:src="@mipmap/ic_comrade"
                android:textSize="@dimen/text_normal"
                android:background="@drawable/btn_rounded_rectangle"
                android:text="Com 5"
                android:layout_marginTop="50dp" />
            <ImageButton
                android:id="@+id/com4Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="@color/fragment_of_trust_text_color"
                android:src="@mipmap/ic_comrade"
                android:textSize="@dimen/text_normal"
                android:background="@drawable/btn_rounded_rectangle"
                android:text="Com 4"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="70dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
