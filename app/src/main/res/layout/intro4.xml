<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="@integer/intro4_layout_weight"
    android:background="@color/intro4_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/intro_layout_height"
        android:layout_gravity="center"
        android:layout_weight="@integer/intro4_textView_weight"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:paddingLeft="@dimen/intro_padding_20"
        android:paddingRight="@dimen/intro_padding"
        android:text="@string/slide_four_head"
        android:textColor="@color/intro_text_color"
        android:textSize="@dimen/text_large" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/intro_layout_height"
        android:layout_weight="@integer/intro4_linear_layout_weight"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="@integer/intro4_weight_sum">

        <ImageView
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="@integer/intro4_imageview_weight"
            android:paddingLeft="@dimen/intro_padding_16"
            android:paddingRight="@dimen/intro_padding_16"
            android:src="@drawable/ic_thumb" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/intro_layout_height"
        android:layout_gravity="center"
        android:layout_weight="@integer/intro4_textView_weight"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:paddingLeft="@dimen/intro_padding_64"
        android:paddingRight="@dimen/intro_padding_64"
        android:text="@string/slide_four_bottom"
        android:textColor="@color/intro_text_color"
        android:textSize="@dimen/text_large"
        android:textStyle="bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/intro_padding_64" />
</LinearLayout>