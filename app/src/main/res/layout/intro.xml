<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/intro_background"
    android:layout_weight="@integer/intro4_layout_weight"
    android:id="@+id/main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="32dp"
        android:layout_weight="@integer/intro4_textView_weight"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/intro_text_color"
        android:paddingRight="32dp"
        android:textSize="@dimen/text_large"
        android:text="Just a few Steps on how to use"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="@integer/intro4_linear_layout_weight">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@mipmap/ic_circle"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="@integer/intro4_textView_weight"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/intro_text_color"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"
        android:textSize="@dimen/text_large"
        android:text="Circle Of Trust"
        android:fontFamily="sans-serif-thin"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="64dp" />
</LinearLayout>