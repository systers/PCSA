<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_app"
    tools:context=".MainActivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/primary_text_default_material_dark"
            android:textSize="@dimen/header_font"
            android:textStyle="bold"
            android:text="@string/first_aide"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height"
            android:layout_marginTop="@dimen/view_margin"
            android:layout_marginBottom="@dimen/view_margin"
            android:background="@color/photo_border" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/primary_text_default_material_dark"
            android:textSize="@dimen/title_font"
            android:text="@string/home_title"
            />

        <Button
            android:id="@+id/getButton"
            style="@style/NavigateButton"
            android:text="@string/get_help"
            android:layout_marginTop="@dimen/fragment_main_marginTop"/>
        <Button
            android:id="@+id/circleButton"
            style="@style/NavigateButton"
            android:text="@string/circle"
            android:layout_marginTop="@dimen/fragment_main_marginTop_15"/>
        <Button
            android:id="@+id/safetyButton"
            style="@style/NavigateButton"
            android:text="@string/safety_tools"
            android:layout_marginTop="@dimen/fragment_main_marginTop_15"/>
        <Button
            android:id="@+id/supportButton"
            style="@style/NavigateButton"
            android:text="@string/support_services"
            android:layout_marginTop="@dimen/fragment_main_marginTop_15"/>

        <Button
            style="@style/NavigateButton"
            android:id="@+id/sexualButton"
            android:text="@string/sexual_assault_awareness"
            android:layout_marginTop="@dimen/fragment_main_marginTop_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/policyButton"
            style="@style/NavigateButton"
            android:text="@string/policies_glossary"
            android:layout_marginTop="@dimen/fragment_main_marginTop_15"/>

    </LinearLayout>

</ScrollView>
