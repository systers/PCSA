<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/activity_trustee_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_normal"
            android:textColor="@color/activity_trustee_text_color"
            android:text="Add the Comrade Numbers here"
            />

        <EditText
            android:id="@+id/comrade1EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:textCursorDrawable="@null"
            android:background="@drawable/edit_text_bg"
            android:layout_gravity="center"
            android:textColor="@color/activity_trustee_edittext_color"
            android:inputType="number"
            android:hint="Comrade 1"
            android:ems="@integer/ems"
            android:paddingTop="@dimen/padding_top"/>
        <EditText
            android:id="@+id/comrade2EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:inputType="number"
            android:textCursorDrawable="@null"
            android:background="@drawable/edit_text_bg"
            android:layout_gravity="center"
            android:textColor="@color/activity_trustee_edittext_color"
            android:hint="Comrade 2"
            android:ems="@integer/ems"
            android:paddingTop="@dimen/padding_top"/>

        <EditText
            android:id="@+id/comrade3EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:inputType="number"
            android:textCursorDrawable="@null"
            android:background="@drawable/edit_text_bg"
            android:layout_gravity="center"
            android:textColor="@color/activity_trustee_edittext_color"
            android:hint="Comrade 3"
            android:ems="@integer/ems"
            android:paddingTop="@dimen/padding_top"/>

        <EditText
            android:id="@+id/comrade4EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:inputType="number"
            android:textCursorDrawable="@null"
            android:background="@drawable/edit_text_bg"
            android:layout_gravity="center"
            android:textColor="@color/activity_trustee_edittext_color"
            android:hint="Comrade 4"
            android:ems="@integer/ems"
            android:paddingTop="@dimen/padding_top"/>

        <EditText
            android:id="@+id/comrade5EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:inputType="number"
            android:textCursorDrawable="@null"
            android:background="@drawable/edit_text_bg"
            android:layout_gravity="center"
            android:textColor="@color/activity_trustee_edittext_color"
            android:hint="Comrade 5"
            android:ems="@integer/ems"
            android:paddingTop="@dimen/padding_top"/>

        <EditText
            android:id="@+id/comrade6EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginTop="@dimen/ten"
            android:textCursorDrawable="@null"
            android:background="@drawable/edit_text_bg"
            android:layout_gravity="center"
            android:inputType="number"
            android:textColor="@color/activity_trustee_edittext_color"
            android:hint="Comrade 6"
            android:ems="@integer/ems"
            android:paddingTop="@dimen/padding_top"/>
        <Button
            android:id="@+id/okButton"
            android:layout_width="@dimen/layout_width"
            android:layout_height="@dimen/fifty"
            android:layout_gravity="center"
            android:textColor="@color/intro_text_color"
            android:background="@drawable/btn_rounded_rectangle"
            android:text="OK"
            android:textSize="@dimen/text_normal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>

</ScrollView>
