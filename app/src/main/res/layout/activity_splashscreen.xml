<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app">

    <ImageView
        android:layout_width="@dimen/splash_screen_imgsize"
        android:layout_height="@dimen/splash_screen_imgsize"
        android:src="@drawable/ic_logo_vertical"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/splash_logo_marginTop" />


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/splash_screen_progress"
        android:layout_marginTop="@dimen/progressbar_margin_top"
        android:layout_below="@+id/imageView"
        android:indeterminate="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>