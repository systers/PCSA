<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:spinnerItemStyle">@style/pcsaSpinnerShownStyle</item>
        <item name="colorPrimary">@color/background_app</item>
        <item name="colorPrimaryDark">@color/background_app</item>
        <item name="colorAccent">@color/background_clicked</item>
    </style>

    <style name="pcsaSpinnerShownStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
    </style>

    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_rounded_rectangle</item>
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/app_button_side_padding</item>
        <item name="android:paddingRight">@dimen/app_button_side_padding</item>
    </style>

    <style name="NavigateButton" parent="AppButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="NavigateWrapButton" parent="AppButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="AppTheme" />

    <style name="AppTheme.PopupOverlay" parent="AppTheme" />
</resources>
